<% if @origin %>
  <%= render "pagination_controls", paginatable: @archive_files, entry_name: 'Aktenstück', suffix: 'top' %>
  
  <% @archive_files.each do |archive_file| %>
    <%= render ResultComponent.new(archive_file: archive_file) %>
  <% end %>
  <div class="pagination">
    <%= paginate @archive_files, window: 4, outer_window: 1 %>
  </div>
  <%= render "pagination_controls", paginatable: @archive_files, entry_name: 'Aktenstück', suffix: 'bottom' %>
<% else %>
  <nav class="letter-index">
    <%= link_to t("browse.all"), browse_origins_path, class: "letter-index__item #{"letter-index__item--active" unless @letter}" %>
    <% @origin_letters.each do |letter| %>
      <%= link_to letter, browse_origins_path(letter: letter), class: "letter-index__item #{"letter-index__item--active" if @letter == letter}" %>
    <% end %>
  </nav>
  
  <%= render "pagination_controls", paginatable: @origins, entry_name: 'Provenienz', suffix: 'top' %>

  <ul class="browse-origins">
    <% @origins.each do |origin| %>
      <li class="browse-origins__item">
        <%= link_to browse_origins_path(origin_id: origin.id) do %>
          <span class="browse-origins__name"><%= origin.name %></span>
          <span class="browse-origins__count"><%= number_with_delimiter(origin.file_count) %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
  <div class="pagination">
    <%= paginate @origins, params: { letter: @letter }, window: 4, outer_window: 1 %>
  </div>
  <%= render "pagination_controls", paginatable: @origins, entry_name: 'Provenienz', suffix: 'bottom' %>
<% end %>
