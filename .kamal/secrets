RAILS_MASTER_KEY=$(cat config/master.key)
KAMAL_REGISTRY_PASSWORD=$(gh auth token)
MEILI_MASTER_KEY=$(RAILS_MASTER_KEY=$(cat config/master.key) bin/rails credentials:show 2>/dev/null | ruby -ryaml -e 'puts YAML.load(STDIN.read).dig("meilisearch", "master_key")' 2>/dev/null || echo "changeme")
MEILISEARCH_HOST=http://quellenportal-meilisearch:7700
MEILISEARCH_API_KEY=$MEILI_MASTER_KEY
